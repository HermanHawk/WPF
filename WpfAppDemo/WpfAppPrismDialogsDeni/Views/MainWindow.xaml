<Window x:Class="WpfAppPrismDemo.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppPrismDemo"
        mc:Ignorable="d"
        xmlns:Prism="http://prismlibrary.com/"
        Prism:ViewModelLocator.AutoWireViewModel="True"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!--<TextBlock Text="Hello world!,this is a Prism test"/>-->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button Margin="5" Width="100" Height="20" Content="打开" Command="{Binding DelegateCommand}" CommandParameter="ViewOpen"/>
            <Button Margin="5" Width="100" Height="20" Content="保存" Command="{Binding DelegateCommand}" CommandParameter="ViewSave"/>
            <Button Margin="5" Width="100" Height="20" Content="修改" Command="{Binding DelegateCommand}" CommandParameter="ViewDelete"/>
            <Button Margin="5" Width="100" Height="20" Content="返回" Command="{Binding BackCommand}" CommandParameter="ViewBack"/>
        </StackPanel>

        <ContentControl Grid.Row="1" Prism:RegionManager.RegionName="ContentRegionNameMainWindow"/>
    </Grid>
</Window>
