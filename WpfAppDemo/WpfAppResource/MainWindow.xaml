<Window x:Class="WpfAppResource.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppResource"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Button Margin="10" Height="40" Width="200" BorderThickness="5" Content="Update" Click="Button_Click"/>
            <Button Margin="10" Height="40" Width="200" BorderThickness="5" BorderBrush="{StaticResource solidColorTest}" Content="testButton1" />  <!--静态资源-->
            <Button Margin="10" Height="40" Width="200" BorderThickness="5" BorderBrush="{DynamicResource solidColorTest}" Content="testButton2"/>  <!--动态资源-->
        </StackPanel>
    </Grid>
</Window>
