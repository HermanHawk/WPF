                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Border Background="#7671D8" Margin="5"/>
                <Border Background="#4C9ECD" Grid.Column="1" Margin="5"/>
                <Border Background="#D970CF" Grid.Column="2" Margin="5"/>
                <Border Background="#5AC4B6" Grid.Column="3" Margin="5"/>
                <Border Background="#D9707F" Grid.Column="4" Margin="5"/>

                <Border Background="Red" Margin="5" Grid.ColumnSpan="3" Grid.Row="1"/>
                <Border Background="Yellow"  Margin="5" Grid.ColumnSpan="2" Grid.Row="1" Grid.Column="3"/>
                <Border Background="Blue" Margin="5" Grid.ColumnSpan="3" Grid.Row="2"/>
                <Border Background="Green" Margin="5" Grid.ColumnSpan="2" Grid.Row="2" Grid.Column="3"/>

            </Grid>
        </Grid>
